<div class="position-relative">
  <div class="card-category card-large" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>')">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="row my-2">
  <% @list.movies.each do |movie| %>
    <div class="card-product">
      <img src="<%= movie.poster_url %>" />
      <div class="card-product-infos">
        <h2> <%=  movie.title %> </h2>
        <p> 📝 Overview: <%= movie.overview %> </p>
        <p> ⭐ Rating: <%= movie.rating %> </p>
      </div>
    </div>
  <% end %>
</div>
